{namespace remobid.templates.test}

/**
 * @param href the rest Url of the Model.
 */
{template .modelDisplay}
<div class="{css rb-modelTest}" style="border:1px; height 30px; min-width:30px">
  <span class="{css rb-modelTest-href}"
        data-rb-bind="href,id"
        data-rb-bind-get="href,innerHHTML,1|id,toggleClass:colr,0"
        data-rb-bind-type="innerHTML,toggleClass:colr"
        data-rb-bind-get
        data-rb-bind-helper>{$href}</span>
</div>
{/template}

/**
 * @param href the rest Url of the Model
 */
{template .modelForm}
<div class="{css rb-form}">
  <input type="text" value="{$href}"
         data-rb-set="href"/>
</div>
{/template}


/**
template binding syntax

Getter
------
e.g. :
data-rb-bind-get="href,html,1,0|id,tglClass:rb-mark,0,1"

[name of the model attribute]
[type which defines the update function (html | text | tglClass:* | chAttr:* | control)]
[flog: use the helper function (1:true | 0:false)]
[flag: externally changed -> mark parent (1) or it self (0)]

Getter
------
data-rb-bind-set="href"
[name of the model attribute]
*/